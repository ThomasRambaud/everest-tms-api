{
  "name": "everest-tms-api",
  "version": "1.4.11",
  "description": "Package that allows you to easily interact with the Everest TMS.",
  "company": "Cogepart",
  "author": "ABBAL SÃ©bastien",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "tms",
    "everest",
    "connector",
    "edi",
    "everst",
    "api",
    "logistic",
    "transport",
    "dms"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastien-abbal/everest-tms-api.git"
  },
  "bugs": {
    "url": "https://github.com/sebastien-abbal/everest-tms-api/issues"
  },
  "engines": {
    "node": ">=8"
  },
  "homepage": "https://github.com/sebastien-abbal/everest-tms-api#readme",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build": "rimraf lib && tsc --project tsconfig.build.json",
    "deploy": "yarn build && npm publish",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "axios": "^1.3.5"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/uuid": "^9.0.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.3.2",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.7.4",
    "uuid": "^9.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testEnvironment": "node",
    "testTimeout": 10000,
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testRegex": ".spec.ts$",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/types/**/*.ts",
      "!src/tests/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100,
        "statements": 100,
        "branches": 100,
        "functions": 100
      }
    },
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/",
      "<rootDir>/.github/"
    ]
  }
}
